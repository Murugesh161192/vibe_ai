# GitHub API Configuration
# Get your token from: https://github.com/settings/tokens
# Required permissions: public_repo (for public repositories)
GITHUB_TOKEN=your_github_personal_access_token_here

# Gemini AI API Configuration (Optional - for AI summarization feature)
# Get your API key from: https://makersuite.google.com/app/apikey
# This enables the "Summarize with AI" feature for repositories
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (Optional)
# Add your frontend URL for production
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=900000

# API Configuration
API_PREFIX=/api 